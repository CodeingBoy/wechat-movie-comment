/**app.wxss**/

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

page {
  background-color: #f7f9fb;
}

button.button-reset {
  position: relative;
  display: block;
  margin: 0;
  padding: 0;
  box-sizing: none;
  font-size: unset;
  text-align: left;
  text-decoration: none;
  line-height: unset;
  border-radius: 0;
  overflow: hidden;
  color: unset;
  background-color: unset;
}

.voice-box {
  background-color: lightgray;
  border: 1px solid gray;
  font-size: 30rpx;
  height: 45rpx;
  padding: 0 20rpx;
  width: 200rpx;
}

.image-thumbs {
  width: 50rpx;
  height: 50rpx;
}

.image-user {
  width: 64rpx;
  height: 64rpx;
}
.icon-play{
  width: 50rpx;
}

.icon-button-wrapper{
  display: flex;
  align-items: center;
  justify-content: center;
}